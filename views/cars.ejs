<!DOCTYPE html>
<html>
<head>
  <title>Available Cars - AutoRent</title>
  <style>
    .page-header {
      margin-bottom: 30px;
    }

    .page-header h1 {
      font-size: 32px;
      margin-bottom: 10px;
    }

    .page-header p {
      color: #7f8c8d;
      font-size: 16px;
    }

    .cars-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 25px;
    }

    .car-card {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      transition: all 0.3s;
    }

    .car-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.15);
    }

    .car-image {
      width: 100%;
      height: 180px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 60px;
    }

    .car-content {
      padding: 20px;
    }

    .car-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 10px;
      color: #2c3e50;
    }

    .car-detail {
      color: #7f8c8d;
      font-size: 14px;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .car-price {
      font-size: 24px;
      font-weight: bold;
      color: #27ae60;
      margin: 15px 0;
    }

    .car-price small {
      font-size: 14px;
      color: #7f8c8d;
      font-weight: normal;
    }

    .status-badge {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: bold;
      text-transform: uppercase;
      margin-bottom: 10px;
    }

    .status-available {
      background: #d5f4e6;
      color: #27ae60;
    }

    .status-rented {
      background: #fadbd8;
      color: #e74c3c;
    }

    .status-maintenance {
      background: #fff3cd;
      color: #f39c12;
    }

    .book-btn {
      width: 100%;
      padding: 12px;
      background: #3498db;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 15px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
      text-decoration: none;
      display: block;
      text-align: center;
    }

    .book-btn:hover {
      background: #2980b9;
    }

    .book-btn:disabled {
      background: #95a5a6;
      cursor: not-allowed;
    }

    .empty-state {
      text-align: center;
      padding: 80px 20px;
      color: #7f8c8d;
    }

    .empty-state-icon {
      font-size: 80px;
      margin-bottom: 20px;
    }

    @media (max-width: 768px) {
      .cars-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>

<%- include('layout', { body: '' }) %>

<div class="page-header">
  <h1>üöó Available Cars</h1>
  <p>Browse and book from our collection of rental cars</p>
</div>

<!-- Loading state -->
<div id="loading" style="text-align: center; padding: 40px;">
  <p>‚è≥ Loading cars...</p>
</div>

<!-- Container cho cars -->
<div id="cars-container" class="cars-grid" style="display: none;"></div>

<!-- Empty state -->
<div id="empty-state" class="empty-state" style="display: none;">
  <div class="empty-state-icon">üöó</div>
  <h2>No cars available</h2>
  <p>Check back later for available cars.</p>
</div>

<!-- Error state -->
<div id="error-state" style="display: none; text-align: center; padding: 40px; color: #e74c3c;">
  <p id="error-message"></p>
</div>

<script>
  // Fetch cars from API
  fetch('/api/v1/cars')
    .then(response => response.json())
    .then(result => {
      document.getElementById('loading').style.display = 'none';
      
      if (result.success && result.data.length > 0) {
        const html = result.data.map(car => `
          <div class="car-card">
            <div class="car-image">üöó</div>
            
            <div class="car-content">
              <span class="status-badge status-${car.status.toLowerCase()}">
                ${car.status}
              </span>
              
              <div class="car-title">${car.brand} ${car.model}</div>
              
              <div class="car-detail">
                üîë Plate: ${car.licensePlate}
              </div>
              
              <div class="car-price">
                $${car.pricePerDay}
                <small>/ day</small>
              </div>
              
              ${car.status === 'AVAILABLE' ? `
                <a href="/booking/${car._id}" class="book-btn">
                  üìÖ Book Now
                </a>
              ` : `
                <button class="book-btn" disabled>
                  Not Available
                </button>
              `}
            </div>
          </div>
        `).join('');
        
        document.getElementById('cars-container').innerHTML = html;
        document.getElementById('cars-container').style.display = 'grid';
      } else {
        document.getElementById('empty-state').style.display = 'block';
      }
    })
    .catch(error => {
      document.getElementById('loading').style.display = 'none';
      document.getElementById('error-state').style.display = 'block';
      document.getElementById('error-message').textContent = 
        '‚ùå Error loading cars: ' + error.message;
    });
</script>