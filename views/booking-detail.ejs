<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking Details - AutoRent</title>
  <style>
    .booking-container {
      max-width: 1000px;
      margin: 0 auto;
    }

    .page-header {
      margin-bottom: 40px;
    }

    .page-header h1 {
      font-size: 36px;
      margin-bottom: 10px;
      color: #2c3e50;
    }

    .page-header p {
      color: #7f8c8d;
      font-size: 16px;
    }

    .booking-card {
      background: white;
      border-radius: 16px;
      padding: 40px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      margin-bottom: 30px;
    }

    .booking-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid #ecf0f1;
    }

    .booking-id {
      font-size: 28px;
      font-weight: 700;
      color: #2c3e50;
    }

    .status-badge {
      padding: 10px 20px;
      border-radius: 25px;
      font-size: 14px;
      font-weight: bold;
      text-transform: uppercase;
      color: white;
    }

    .status-pending { background: #f39c12; }
    .status-confirmed { background: #3498db; }
    .status-active { background: #27ae60; }
    .status-completed { background: #95a5a6; }
    .status-cancelled { background: #e74c3c; }

    .info-section {
      margin-bottom: 40px;
    }

    .section-title {
      font-size: 20px;
      font-weight: 600;
      color: #2c3e50;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 25px;
    }

    .info-item {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .info-label {
      font-size: 13px;
      color: #7f8c8d;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .info-value {
      font-size: 17px;
      color: #2c3e50;
      font-weight: 600;
    }

    .price-highlight {
      font-size: 32px;
      color: #27ae60;
      font-weight: 800;
    }

    .car-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 30px;
      border-radius: 12px;
      color: white;
      margin-bottom: 30px;
    }

    .car-title {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .loading {
      text-align: center;
      padding: 60px 20px;
      color: #7f8c8d;
    }

    .spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #667eea;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 20px auto;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .error-message {
      text-align: center;
      padding: 40px 20px;
      color: #e74c3c;
    }

    .back-btn {
      display: inline-block;
      padding: 10px 20px;
      background: #95a5a6;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      margin-bottom: 20px;
    }

    .back-btn:hover {
      background: #7f8c8d;
    }

    @media (max-width: 768px) {
      .booking-header {
        flex-direction: column;
        gap: 15px;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>

<%- include('layout', { body: '' }) %>

<div class="booking-container">
  <a href="/bookings" class="back-btn">‚Üê Back to All Bookings</a>

  <!-- Loading -->
  <div id="loading" class="loading">
    <div class="spinner"></div>
    <p>Loading booking details...</p>
  </div>

  <!-- Error -->
  <div id="error" class="error-message" style="display: none;">
    <h3>‚ùå Error</h3>
    <p id="error-message"></p>
    <a href="/bookings" class="btn" style="margin-top: 20px;">Back to Bookings</a>
  </div>

  <!-- Booking Content -->
  <div id="booking-content" style="display: none;">
    <div class="page-header">
      <h1>üìã Booking Details</h1>
      <p>View complete booking information</p>
    </div>

    <div class="booking-card">
      <div class="booking-header">
        <div class="booking-id" id="bookingId">#LOADING</div>
        <span class="status-badge" id="bookingStatus">PENDING</span>
      </div>

      <!-- Car Information -->
      <div class="car-section">
        <div class="car-title" id="carInfo">üöó Loading...</div>
        <div class="info-grid">
          <div class="info-item">
            <div class="info-label">üîë License Plate</div>
            <div class="info-value" id="licensePlate">N/A</div>
          </div>
          <div class="info-item">
            <div class="info-label">üíµ Price Per Day</div>
            <div class="info-value" id="pricePerDay">$0</div>
          </div>
        </div>
      </div>

      <!-- Customer Information -->
      <div class="info-section">
        <div class="section-title">üë§ Customer Information</div>
        <div class="info-grid">
          <div class="info-item">
            <div class="info-label">Name</div>
            <div class="info-value" id="customerName">N/A</div>
          </div>
          <div class="info-item">
            <div class="info-label">Email</div>
            <div class="info-value" id="customerEmail">N/A</div>
          </div>
          <div class="info-item">
            <div class="info-label">Phone</div>
            <div class="info-value" id="customerPhone">N/A</div>
          </div>
        </div>
      </div>

      <!-- Booking Information -->
      <div class="info-section">
        <div class="section-title">üìÖ Booking Information</div>
        <div class="info-grid">
          <div class="info-item">
            <div class="info-label">Start Date</div>
            <div class="info-value" id="startDate">N/A</div>
          </div>
          <div class="info-item">
            <div class="info-label">End Date</div>
            <div class="info-value" id="endDate">N/A</div>
          </div>
          <div class="info-item">
            <div class="info-label">Duration</div>
            <div class="info-value" id="duration">0 days</div>
          </div>
          <div class="info-item">
            <div class="info-label">üí∞ Total Price</div>
            <div class="info-value price-highlight" id="totalPrice">$0</div>
          </div>
        </div>
      </div>

      <!-- Timestamps -->
      <div class="info-section">
        <div class="section-title">üïí Timestamps</div>
        <div class="info-grid">
          <div class="info-item">
            <div class="info-label">Created At</div>
            <div class="info-value" id="createdAt">N/A</div>
          </div>
          <div class="info-item">
            <div class="info-label">Last Updated</div>
            <div class="info-value" id="updatedAt">N/A</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    loadBookingDetails();
  });

  async function loadBookingDetails() {
    const token = localStorage.getItem('token');
    
    if (!token) {
      showError('Please login to view booking details');
      setTimeout(() => {
        window.location.href = '/login';
      }, 2000);
      return;
    }

    // ‚úÖ L·∫•y bookingId t·ª´ URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const bookingId = urlParams.get('id');

    if (!bookingId) {
      showError('Booking ID is missing');
      return;
    }

    try {
      // ‚úÖ G·ªçi API GET /bookings/:id
      const response = await fetch(`/api/v1/bookings/${bookingId}`, {
        method: 'GET',
        headers: {
          'Authorization': `Bearer ${token}`
        }
      });

      const result = await response.json();

      if (response.status === 401) {
        localStorage.removeItem('token');
        localStorage.removeItem('user');
        showError('Session expired. Please login again.');
        setTimeout(() => {
          window.location.href = '/login';
        }, 2000);
        return;
      }

      if (response.ok && result.success) {
        displayBooking(result.data);
      } else {
        showError(result.error?.message || 'Failed to load booking');
      }
    } catch (error) {
      showError('Network error: ' + error.message);
      console.error('Load booking error:', error);
    }
  }

  function displayBooking(booking) {
    document.getElementById('loading').style.display = 'none';
    document.getElementById('booking-content').style.display = 'block';

    // Booking ID & Status
    document.getElementById('bookingId').textContent = `#${booking._id.toString().slice(-6).toUpperCase()}`;
    const statusBadge = document.getElementById('bookingStatus');
    statusBadge.textContent = booking.status;
    statusBadge.className = `status-badge status-${booking.status.toLowerCase()}`;

    // Car Information
    const car = booking.carId;
    document.getElementById('carInfo').textContent = `üöó ${car.brand} ${car.model}`;
    document.getElementById('licensePlate').textContent = car.licensePlate || 'N/A';
    document.getElementById('pricePerDay').textContent = `$${car.pricePerDay || 0}`;

    // Customer Information
    const customer = booking.userId;
    document.getElementById('customerName').textContent = customer.name || 'N/A';
    document.getElementById('customerEmail').textContent = customer.email || 'N/A';
    document.getElementById('customerPhone').textContent = customer.phone || 'N/A';

    // Booking Information
    const startDate = new Date(booking.startDate);
    const endDate = new Date(booking.endDate);
    const duration = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));

    document.getElementById('startDate').textContent = startDate.toLocaleDateString('en-US', {
      weekday: 'short', year: 'numeric', month: 'short', day: 'numeric'
    });
    document.getElementById('endDate').textContent = endDate.toLocaleDateString('en-US', {
      weekday: 'short', year: 'numeric', month: 'short', day: 'numeric'
    });
    document.getElementById('duration').textContent = `${duration} days`;
    document.getElementById('totalPrice').textContent = `$${booking.totalPrice}`;

    // Timestamps
    const createdAt = new Date(booking.createdAt);
    const updatedAt = new Date(booking.updatedAt);
    document.getElementById('createdAt').textContent = createdAt.toLocaleString('en-US');
    document.getElementById('updatedAt').textContent = updatedAt.toLocaleString('en-US');
  }

  function showError(message) {
    document.getElementById('loading').style.display = 'none';
    document.getElementById('error').style.display = 'block';
    document.getElementById('error-message').textContent = message;
  }
</script>

</body>
</html>